{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
    },
    "files": [
        "index.ts"
    ],
    "include":[
        "lib/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "**/*.test.ts"
    ]
}