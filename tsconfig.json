{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015"],
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceRoot": "src",
        "sourceMap": true,
        "rootDir":"./src",
        "outDir": "dist"
    },
    "include":[ "src/**/*" ],
    "exclude": [
        "node_modules",
        "coverage",
        "**/*.test.ts"
    ]
}